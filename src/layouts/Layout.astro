---
import Background from "../components/Background.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Kaboom Software" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body>
    <Background />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: system-ui, sans-serif;
    background: #000;
    background-size: 224px;
  }

  body {
    margin: 0;
    min-height: 100vh;
    min-hidth: 100dvh;
  }
</style>
