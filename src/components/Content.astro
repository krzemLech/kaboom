---
const { title, id } = Astro.props;
---

<section
  id={id}
  class="about-section fixed inset-0 z-30 pointer-events-none transition-opacity duration-300 opacity-1 p-4"
>
  <div
    class="display-field relative h-full md:w-[600px]
           bg-black/10 backdrop-blur-xl rounded-sm
           border border-gray-800 p-12 pt-8
           transform transition-transform duration-300 ease-out
           pointer-events-auto overflow-auto"
  >
    <a
      href="#"
      class="absolute max-md:top-3 max-md:left-3 md:top-6 md:right-6 text-gray-500 hover:text-gray-300"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width={2}
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </a>
    <h1
      class="text-transparent bg-clip-text bg-gradient-to-r
               from-[#FF4D4D] via-[#FF9900] to-[#FFCC00]
               text-4xl font-bold mb-8 md:w-[50%]"
    >
      {title}
    </h1>
    <slot />
  </div>
</section>

<style>
  /* Hide by default */
  .about-section {
    visibility: hidden;
  }

  /* Show when URL hash is #about */
  section:target .display-field {
    visibility: visible;
    opacity: 1 !important;
  }

  /* Slide in the content when visible */
  .about-section:target div {
    transform: translateX(0) !important;
  }
</style>
